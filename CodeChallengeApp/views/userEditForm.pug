extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h2 User Edit Form
        a.w3-btn.w3-round.w3-khaki(href="/") Home
    form.w3-container(id="editForm", method="POST", action=`/users/edit/${user.id}`)
      fieldset
        legend Metadata
        label
          b Name: 
          input.w3-input.w3-round(type="text" name="name" value=user.name)
        label
          b Language: 
          input.w3-input.w3-round(type="text" name="language" value=user.language)          
        label
          b Id: 
          input.w3-input.w3-round(type="text" name="id" readonly value=user.id)
        label
          b Bio: 
          input.w3-input.w3-round(type="text" name="bio" value=user.bio)
        label
          b Version: 
          input.w3-input.w3-round(type="text" name="version" value=user.version)
      br
      button.w3-btn.w3-purple.w3-mb-2(type=submit) Submit
      
